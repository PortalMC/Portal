@model int
<div id="project-header" class="body-content">
    <div class="container">
        <div id="project-page-title" class="page-title">
            <h2>@ViewBag.Name</h2>
            <a class="btn btn-success" role="button" asp-area="" asp-controller="Projects" asp-action="Editor" asp-route-uuid="@ViewBag.Uuid"><i class="fa fa-edit" aria-hidden="true"></i> Open in editor</a>
        </div>
        <ul class="nav nav-tabs">
            <li @if (Model == 0)
                {
                    @:class="active"
                }>
                <a asp-area="" asp-controller="Projects" asp-action="Index" asp-route-uuid="@ViewBag.Uuid"><i class="fa fa-desktop" aria-hidden="true"></i> Overview</a>
            </li>
            <li @if (Model == 1)
                {
                    @:class="active"
                }>
                <a asp-area="" asp-controller="Projects" asp-action="Builds" asp-route-uuid="@ViewBag.Uuid"><i class="fa fa-server" aria-hidden="true"></i> Builds</a>
            </li>
            <li @if (Model == 2)
                {
                    @:class="active"
                }>
                <a asp-area="" asp-controller="Projects" asp-action="Settings" asp-route-uuid="@ViewBag.Uuid"><i class="fa fa-cog" aria-hidden="true"></i> Settings</a>
            </li>
        </ul>
    </div>
</div>