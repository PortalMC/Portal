@model ChangePasswordViewModel
@{
    Layout = "_Layout";
    ViewBag.Title = "Change password";
}
@section HeadDevelopment {
    <link rel="stylesheet" href="~/css/manage.css" asp-append-version="true"/>
}
@section Head {
    <link rel="stylesheet" href="~/css/manage.min.css"/>
}

<h2>@ViewBag.Title</h2>

<form asp-controller="Manage" asp-action="ChangePassword" method="post">
    <h4>Change Password Form</h4>
    <hr/>
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="form-group row">
        <label asp-for="OldPassword" class="col-md-2 col-form-label"></label>
        <div class="col-md-10">
            <input asp-for="OldPassword" class="form-control"/>
            <span asp-validation-for="OldPassword" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="NewPassword" class="col-md-2 col-form-label"></label>
        <div class="col-md-10">
            <input asp-for="NewPassword" class="form-control"/>
            <span asp-validation-for="NewPassword" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="ConfirmPassword" class="col-md-2 col-form-label"></label>
        <div class="col-md-10">
            <input asp-for="ConfirmPassword" class="form-control"/>
            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <div class="offset-md-2 col-md-10">
            <button type="submit" class="btn btn-primary">Change password</button>
        </div>
    </div>
</form>

@section Scripts {
    @{ await Html.RenderPartialAsync("Misc/_ValidationScriptsPartial"); }
}