@model Portal.Models.AdminViewModels.VersionsPostViewModel
@{
    Layout = "_SidebarLayout";
    ViewBag.Title = "Admin Area";
    ViewBag.SubTitle = "Edit forge version";
}
@section Sidebar {
    @Html.Partial("Part/_AdminSidebar", 3)
}
@section HeadDevelopment {
    <link rel="stylesheet" href="~/css/admin.css"/>
}
@section Head {
    <link rel="stylesheet" href="~/css/admin.min.css"/>
}

<h3>Edit forge version</h3>

<hr/>

<form asp-controller="Admin" asp-action="Versions" asp-route-id="@Model.ForgeEditViewModel.MinecraftVersion.Id"
      asp-route-subaction="@Model.ForgeEditViewModel.Id" asp-route-subsubaction="Edit" method="post" class="form-horizontal" enctype="multipart/form-data">
    <div class="row form-group-dummy">
        <span class="col-md-2">Minecraft</span>
        <span class="col-md-10">@Model.ForgeEditViewModel.MinecraftVersion.Version</span>
    </div>
    <div class="form-group">
        <label asp-for="ForgeEditViewModel.Version" class="col-md-2 control-label">Name</label>
        <div class="col-md-10">
            <input asp-for="ForgeEditViewModel.Version" class="form-control" value="@Model.ForgeEditViewModel.Version"/>
            <span asp-validation-for="ForgeEditViewModel.Version" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group form-group-checkbox">
        <label asp-for="ForgeEditViewModel.IsRecommend" class="col-md-2 control-label">IsRecommend</label>
        <div class="col-md-10">
            <input asp-for="ForgeEditViewModel.IsRecommend" class="form-control" type="checkbox"/>
        </div>
    </div>
    <div class="form-group">
        <label asp-for="ForgeEditViewModel.ForgeZipFile" class="col-md-2 control-label">Template File</label>
        <div class="col-md-10">
            <input asp-for="ForgeEditViewModel.ForgeZipFile" class="form-control" type="file" accept=".zip"/>
            <span asp-validation-for="ForgeEditViewModel.ForgeZipFile" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <button type="submit" class="btn btn-primary">Update</button>
        </div>
    </div>
</form>

@section Scripts {
    @{ await Html.RenderPartialAsync("Misc/_ValidationScriptsPartial"); }
}