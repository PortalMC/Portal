@using Portal.Utils
@{
    Layout = "_AdminLayout";
    ViewBag.Title = "Users";
}

@section Sidebar {
    @Html.Partial("_AdminSidebar", 1)
}

@switch (ViewBag.Message)
{
    case "success_delete_user":
        <div class="alert alert-success" role="alert">User Deleted.</div>
        break;
}

<div id="admin-header">
    <h3>Users</h3>
    <a class="btn btn-success" asp-controller="Admin" asp-action="Users" asp-route-id="New">Create new user</a>
</div>

<hr/>
<div class="input-group">
    <input type="text" class="form-control" placeholder="Search for..." aria-label="Search for...">
    <span class="input-group-btn">
        <button class="btn btn-default" type="button">Search</button>
    </span>
</div>

<div id="admin-user-container">
    @foreach (var user in Model)
    {
        <div class="admin-user">
            @{
                string email = user.Email;
            }
            @Html.GravatarImage(email, 32, GravatarHtmlHelper.DefaultImage.Identicon)
            <span class="admin-user-email">
                @user.UserName
            </span>
            <a class="btn btn-default" asp-controller="Admin" asp-action="Users" asp-route-id="@user.Id">Detail</a>
        </div>
    }
</div>