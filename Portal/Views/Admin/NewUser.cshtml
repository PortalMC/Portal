@model Portal.Models.AdminViewModels.UserDetailPostViewModel
@{
    Layout = "_SidebarLayout";
    ViewBag.Title = "Admin Area";
    ViewBag.SubTitle = "Create new user";
}
@section Sidebar {
    @Html.Partial("Part/_AdminSidebar", 1)
}
@section HeadDevelopment {
    <link rel="stylesheet" href="~/css/admin.css"/>
}
@section Head {
    <link rel="stylesheet" href="~/css/admin.min.css"/>
}

<h3>Create new user</h3>
<hr/>
<form asp-controller="Admin" asp-action="Users" asp-route-id="New" asp-route-returnurl="@ViewBag.ReturnUrl" method="post" class="form-horizontal">
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="form-group">
        <label asp-for="NewUserViewModel.Email" class="col-md-2 control-label"></label>
        <div class="col-md-10">
            <input asp-for="NewUserViewModel.Email" class="form-control"/>
            <span asp-validation-for="NewUserViewModel.Email" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group">
        <label asp-for="NewUserViewModel.Password" class="col-md-2 control-label"></label>
        <div class="col-md-10">
            <input asp-for="NewUserViewModel.Password" class="form-control"/>
            <span asp-validation-for="NewUserViewModel.Password" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <button type="submit" class="btn btn-default">Create</button>
        </div>
    </div>
</form>

@section Scripts {
    @{ await Html.RenderPartialAsync("Misc/_ValidationScriptsPartial"); }
}